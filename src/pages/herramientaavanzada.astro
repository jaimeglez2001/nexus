---
import HerramientaAvanzada from "../components/HerramientaAvanzada.svelte";
import NavBar from "../components/NavBar.svelte";
import DescripcionFases from "../layouts/DescripcionFases.svelte";
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Actualizaci√≥n en Tiempo Real</title>
    <link rel="icon" href="/favicon.svg" />
  </head>
  <body>
    <header class="wrap z-1">
      <NavBar nav="/herramienta" />
      <a href="herramienta"
        ><span
          class="py-4 px-6 border-2 border-[--nexusBlue] highlight_small hover:bg-[--nexusBlue] duration-200 hover:text-white top-40 right-10 fixed"
          >Modo Guiado</span
        ></a
      >
    </header>

    <main class="flex gap-20 px-[120px] justify-center items-center pt-40">
      <DescripcionFases layout={"vertical"} client:load />
      <HerramientaAvanzada client:load />
    </main>
  </body>
</html>

<style is:global>
  @import url("https://fonts.googleapis.com/css?family=Raleway&display=swap");
  @import url("https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,600;1,800&display=swap");

  @font-face {
    font-family: "Connect";
    src: url("/Connect.ttf") format("truetype-variations");
  }
  @font-face {
    font-family: "Pixelify";
    src: url("/PixelifySans-Regular.ttf");
  }
  @font-face {
    font-family: "Pixelify";
    src: url("/PixelifySans-SemiBold.ttf");
  }

  :root {
    --weightH1: 1000;
    --weightH2: 100;
    --nexusBlue: #1945df;
    font-family: "Raleway";
  }
  h1 {
    font-size: 128px;
    line-height: 110px;
  }
  h2 {
    font-size: 64px;
    line-height: 72px;
  }
  h3 {
    font-size: 48px;
    line-height: 56px;
  }
  h4 {
    font-size: 36px;
    line-height: 40px;
  }
  p {
    font-size: 18px;
  }
  .animated {
    margin: 0;
    font-variation-settings:
      "wght" var(--weightH1),
      "wdth" 125;
    font-family: "Connect";
    transition: 1s;
  }
  .animated:hover {
    font-variation-settings:
      "wght" var(--weightH2),
      "wdth" 125;
    transition: 1s;
  }
  .highlight_small {
    color: var(--nexusBlue);
    font-family: "Pixelify";
    letter-spacing: -0.025rem;
  }
  .highlight_big {
    color: var(--nexusBlue);
    font-family: "Pixelify";
    letter-spacing: -0.5rem;
  }
  .highlight_small_white {
    color: white;
    font-family: "Pixelify";
    letter-spacing: -0.025rem;
  }
  .highlight_big_white {
    color: white;
    font-family: "Pixelify";
    letter-spacing: -0.5rem;
  }
</style>
